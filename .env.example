## USE IF you want to run tina cms in non-local mode

# TinaCMS Mode
TINA_PUBLIC_IS_LOCAL=false

# Azure CosmosDB
COSMOS_DB_CONNECTION_STRING=mongodb://...
COSMOS_DB_NAME=tinacms

# GitHub App Authentication
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_APP_INSTALLATION_ID=
GITHUB_OWNER=sjifire
GITHUB_REPO=website
GITHUB_BRANCH=main

# Cloudinary Upload API (for image optimization before commit)
# Get these from: https://console.cloudinary.com/settings/api-keys
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Microsoft Graph API (for personnel sync from M365)
# Create an App Registration in Azure Portal > Microsoft Entra ID
# Add API Permission: Microsoft Graph > Application > User.Read.All
# Grant admin consent, then create a client secret

# Required
MS_GRAPH_TENANT_ID=           # Azure AD tenant ID (from Entra ID > Overview)
MS_GRAPH_CLIENT_ID=           # App registration client ID
MS_GRAPH_CLIENT_SECRET=       # App registration client secret

# Optional - M365 group IDs for filtering/classification
# Use Object IDs (GUIDs) from Azure Portal > Groups > [group] > Object ID
# Multiple groups can be comma-delimited (no spaces): guid1,guid2,guid3
MS_GRAPH_PERSONNEL_GROUP=     # Filter sync to members of this group (default: all users)
MS_GRAPH_STAFF_GROUP=         # Group IDs for staff classification (default: volunteer)
MS_GRAPH_VOLUNTEER_GROUP=     # Group IDs for volunteer classification
SYNC_PHOTOS=true              # Download profile photos (default: true)
