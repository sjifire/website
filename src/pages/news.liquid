---
title: News & Announcements
pagination:
  data: posts
  size: 24
  alias: post
  reverse: true
permalink: "/news/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber | plus: 1 }}/{% endif %}index.html"
layout: page
sidebar: " "
---
<header class="hgroup">
  <div class="lede">
    {{ news.preamble | markdownify }}
  </div>
</header>
<ul class="l-grid l-grid--auto">
  {% for post in pagination.items %}
    <li class="card">
      <div class="card__body">
        <div class="news__type">
          {% if post.pinned %}<svg class="pin-icon" aria-label="Pinned post"><use xlink:href="#pin"></use></svg>{% endif %}
          {% render "post_type_icons.liquid", post: post %}
          {{ post.post_type }}
        </div>
        <h3 class="news__headline">
          <a href="{{ post.url }}/">
            {{ post.title }}
          </a>
        </h3>
        <time datetime="{{ post.date | htmlDateStringISO }}" pubdate="pubdate" class="news__date">
          {{ post.date | postDateTerseISO }}
        </time>
        <div class="news__lede">
          {{ post.lede | markdownify }}
        </div>
      </div>
      <div class="card__footer">
        <a href="{{ post.url }}/" class="news__readmore" aria-label="Read more about {{ post.title }}">Read more <svg aria-hidden="true"><use xlink:href="#right-arrow"></svg></a>
      </div>
    </li>
  {% endfor %}
</ul>

{% if pagination.href.previous or pagination.href.next %}
  <nav class="pagination">
    {% if pagination.href.previous %}
      <a href="{{ pagination.href.previous | url }}">«</a>
    {% else %}
      <span>«</span>
    {% endif %}
  {%- for pageEntry in pagination.pages %}
    {% if page.url == pagination.hrefs[forloop.index0] %}
      <span>{{ forloop.index }}</span>
    {% else %}
      <a href="{{ pagination.hrefs[forloop.index0] | url }}">{{ forloop.index }}</a>
    {% endif %}
  {%- endfor %}
    {% if pagination.href.next %}
      <a href="{{ pagination.href.next | url }}">»</a>
    {% else %}
      <span>»</span>
    {% endif %}
  </nav>
{% endif %}

{%- capture sidebar_content -%}
  {%- assign groupedReleases = media_releases | groupby: 'year' -%}
  {%- assign sortedGroups = groupedReleases | dictsort | reverse -%}
  {% for group in sortedGroups %}
    {%- assign year = group[0] -%}
    {%- assign releases = group[1] -%}
    <details class="block-content"{% if forloop.first %} open{% endif %}>
      <summary class="sidebar__heading">Media Releases: {{ year }}</summary>
      <dl class="sidebar__desc-list">
        {%- assign reversedReleases = releases | reverse -%}
        {% for media_release in reversedReleases %}
          <dt>
            {{ media_release.date | postDateTerseNoYearISO }}
          </dt>
          <dd>
            <a href="{{ media_release.document }}">
              {{ media_release.title }}
            </a>
          </dd>
        {% endfor %}
      </dl>
    </details>
  {% endfor %}
{%- endcapture -%}
