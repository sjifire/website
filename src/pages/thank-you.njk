---
title: "Thank You"
permalink: "/thank-you/index.html"
---

{% extends 'base.njk' %}

{% block page_header %}
  <h1>
    {{ title | safe }}
  </h1>
  <div class="lede">
    We'll get back to you as soon as possible!
  </div>
{% endblock %}

{% block content %}
  <figure class="post__media">
    <img src="{{ 'https://res.cloudinary.com/san-juan-fire-district-3/image/fetch/f_auto,q_auto:good,c_limit,w_900,h_500/' + site.rootUrl if helpers.env === 'production' }}/assets/images/SJIFR-Ladder-314-2020-Graduation-Crew-768x576.jpg" alt="SJIFire Graduation Crew" width="768" height="576" loading="eager">
  </figure>
  {% for section in thank_you.sections %}
    {% if section.type === 'text' %}
      <article class="post__copy">
        {{ section.copy | markdownify | safe }}
      </article>
    {% elif section.type === 'image' %}
      <figure>
        <img src="{{ 'https://res.cloudinary.com/san-juan-fire-district-3/image/fetch/f_auto,q_auto:good,c_limit,w_1200,h_800/' + site.rootUrl if helpers.env === 'production' }}/assets/images/{{ section.source }}" alt="{{ section.alt }}" width="{{ section.width }}" height="{{ section.height }}" loading="lazy">
        {% if section.caption %}
          <figcaption>
            {{ section.caption }}
          </figcaption>
        {% endif %}
      </figure>
    {% elif section.type === 'youtube' %}
      {% set video_id = section.source.split('/').pop() %}
      <figure>
        <div class="embed-responsive embed-responsive-16by9">
          <iframe src="https://www.youtube.com/embed/{{ video_id }}" loading="lazy"></iframe>
        </div>
        {% if section.caption %}
          <figcaption>
            {{ section.caption }}
          </figcaption>
        {% endif %}
      </figure>
    {% elif section.type === 'gmap' %}
      <figure>
        <div class="embed-responsive embed-responsive-16by9">
          <iframe src="{{ section.source }}" loading="lazy"></iframe>
        </div>
        {% if section.caption %}
          <figcaption>
            {{ section.caption }}
          </figcaption>
        {% endif %}
      </figure>
    {% endif %}
  {% endfor %}
{% endblock %}
