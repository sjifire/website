---
title: San Juan Island Fire and Rescue
permalink: /
---

{% extends 'base.njk' %}

{% block page_header %}
  <h1>
    {{ title }}
  </h1>
  <div class="lede">
    {{ homepage.preamble | markdownify | safe }}
  </div>
{% endblock %}

{% block content %}

  <section class="l-grid l-grid--2col flipped">
    <div class="l-grid__main">
      <ul class="news-grid">
        {% for post in posts | reverse | limit(6) %}
          <li class="news-grid__item card">
            <div class="card__body">
              <div class="news__type">
                {% include "post_type_icons.njk" %}
                {{ post.post_type }}
              </div>
              <h3 class="news__headline">
                {{ post.title | safe }}
              </h3>
              <time datetime="{{ post.date | htmlDateStringISO }}" pubdate="pubdate" class="news__date">
                {{ post.date | postDateTerseISO }}
              </time>
              <div class="news__lede">
                {{ post.lede | markdownify | safe }}
              </div>
            </div>
            <div class="card__footer">
              <a href="/news/{{ post.date | htmlDateStringISO }}-{{ post.title | slugify }}/">Read more</a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
    <aside class="l-grid__sidebar">
      <table class="widget widget--burn-status">
        <caption class="widget__header">
          <div class="flex">
            <svg><use xlink:href='#flame' /></svg>
            <div>
              <h4>
                Fire Safety
              </h4>
            </div>
          </div>
        </caption>
        <tbody class="widget__body">
          <tr class="odd">
            <td>
              Fire Danger
            </td>
            <td class="level level--low">
              {{ configs.fire_status }}
            </td>
          </tr>
          <tr class="even">
            <td>
              Recreational Fires
            </td>
            <td class="level level--low">
              {{ configs.rec_campfire_status }}
            </td>
          </tr>
          <tr class="odd">
            <td>
              Residential Burn Piles
            </td>
            <td class="level level--low">
              {{ configs.burn_ban_status }}
            </td>
          </tr>
          <tr class="even">
            <td>
              Commercial Burns
            </td>
            <td class="level level--low">
              {{ configs.commercial_burn_ban_status }}
            </td>
          </tr>
        </tbody>
      </table>
      <table class="widget widget--station-stats">
        <caption class="widget__header">
          <div class="flex">
            <svg><use xlink:href='#stats' /></svg>
            <div>
              <h4>
                Call Statistics
              </h4>
              <time class="" pubdate="">
                Last 30 days
              </time><br/>
              <time class="" pubdate="">
                Updated: {{ stats.updated_at | postDateTerseISO }}
              </time>
            </div>
          </div>
        </caption>
        <tbody class="widget__body">
          {% set cls = cycler("odd", "even") %}
          <tr class="{{ cls.next() }}">
            <td>
              Calls
              <aside>Last 30 Days</aside>
            </td>
            <td>
              {{ stats.incident_stats.num_incidents }}
            </td>
          </tr>
          <tr class="{{ cls.next() }}">
            <td>
              Calls
              <aside>Last 365 Days</aside>
            </td>
            <td>
              {{ stats.incident_stats.num_incidents_last_365_days }}
            </td>
          </tr>
          <tr class="{{ cls.next() }}">
            <td>
              Reaction Time
              <aside>Seconds</aside>
            </td>
            <td>
              {{ stats.unit_time_stats.first_unit_reaction.median }}
            </td>
          </tr>
          <tr class="{{ cls.next() }}">
            <td rowspan=3>
              Travel Time to Scene
              <aside>Minutes</aside>
            </td>
            <td>
              {{ (stats.region_stats.north.unit_travel_time.median/60) | round(1) }}
              <aside>North</aside>
            </td>
          </tr>
          <tr>
            <td>
              {{ (stats.region_stats.south.unit_travel_time.median/60) | round(1) }}
              <aside>South</aside>
            </td>
          </tr>
          <tr>
            <td>
              {{ (stats.region_stats.central.unit_travel_time.median/60) | round(1) }}
              <aside>Central</aside>
            </td>
          </tr>
          <tr class="{{ cls.next() }}">
            <td>
              Total Responder Time on Calls
              <aside>Minutes</aside>
            </td>
            <td>
              {{ (stats.personnel_stats.time_on_incidents.sum/60) | round }}
            </td>
          </tr>
          <tr class="{{ cls.next() }}">
            <td>
              Responder Participation on Calls
              <aside>Num Responders</aside>
            </td>
            <td>
              {{ stats.personnel_stats.num_unique_responders }}
            </td>
          </tr>
        </tbody>
      </table>
    </aside>
  </section>

{% endblock %}
