---
title: San Juan Island Fire and Rescue
permalink: /
layout: false
number_news_stories: 4
header_image_transform: /h_520,q_auto:eco,b_rgb:334155/e_art:incognito/o_30/e_gradient_fade:symmetric_pad,x_0.1/
header_image_source:
  - alldeptphoto2022_washout.jpg
  - deptvehicles_washout.jpg
image_gallery:
  - image: /assets/media/75627272_2431052507006192_899932430335475712_n.jpg
    image_alt: MOBE Crew
  - image: /assets/media/ssfire_l31.png
    image_alt: Active Fire Scene
  - image: /assets/media/alldeptphoto2022.jpg
    image_alt: All Department Photo 2022
  - image: /assets/media/img_20221016_121427_628.jpg
    image_alt: Open house 2022
  - image: /assets/media/pxl_20221016_192119162.jpg
    image_alt: Response Vehicles
---
{% extends 'base.njk' %}

{% block content %}
  <div class="l-grid l-grid--2col flipped">
    <div class="l-grid__main block-content">
      <ul class="l-grid l-grid--auto">
        {% for post in combined_feed | reverse | limit(number_news_stories) %}
          <li class="card">
            <div class="card__body">
              <div class="news__type">
                {% include "post_type_icons.njk" %}
                {{ post.post_type }}
              </div>
              <h3 class="news__headline">
                <a href="{{ post.url }}{{ '' if post.external else '/' }}"{% if post.external %} target="_blank" rel="noopener"{% endif %}>
                  {{ post.title | safe }}
                </a>
              </h3>
              <time datetime="{{ post.date | htmlDateStringISO }}" pubdate="pubdate" class="news__date">
                {{ post.date | postDateTerseISO }}
              </time>
              <div class="news__lede">
                {{ post.lede | markdownify | safe }}
              </div>
            </div>
            <div class="card__footer">
              <a href="{{ post.url }}{{ '' if post.external else '/' }}" class="news__readmore"{% if post.external %} target="_blank" rel="noopener"{% endif %}>Read more <svg><use xlink:href="#right-arrow"></svg></a>
            </div>
          </li>
        {% endfor %}
      </ul>
      <div style="margin-top:3rem" class="text-center">
        <a class="btn btn-secondary" href="/news/">
          News Archive Â»
        </a>
      </div>

      <section class="gallery">
        <div aria-hidden="true" class="gallery-showcase">
          {% for img in image_gallery %}
            <img id="gallery-pic{{ loop.index }}" class="gallery-showcase__item{{ ' active' if loop.first }} leave-alone" src="{%- imgPath img.image | safe,  'f_auto,q_auto:good,c_fill,w_1000,h_800' -%}" alt="{{ img.image_alt }}" >
          {% endfor %}
        </div>
        <div class="gallery-nav">
          {% for img in image_gallery %}
            <img class="gallery-nav__item{{ ' active' if loop.first }} leave-alone" data-target-id="gallery-pic{{ loop.index }}" src="{%- imgPath img.image | safe,  'f_auto,q_auto:good,c_fill,w_150,h_100' -%}" alt="{{ img.image_alt }}" >
          {% endfor %}
        </div>
      </section>
    </div>

    <aside class="l-grid__sidebar">
      <div class="sidebar-block">
        {% include "burn-status-widget.njk" %}
      </div>
      <div class="sidebar-block">
        {% include "call-stats-widget.njk" %}
      </div>
    </aside>

  </div>
{% endblock %}
