---
title: San Juan Island Fire and Rescue
permalink: /
---

{% extends 'base.njk' %}

{% block page_header %}
  <h1>
    {{ title }}
  </h1>
  <p class="lede">
    {{ homepage.preamble }}
  </p>
{% endblock %}

{% block page_hero %}
  <ul class="home-alerts">
    {% for post in posts | pluck('Advisory', 'post_type') | reverse | limit(2) %}
      <li class="alert">
        <article class="alert__body">
          <div class="alert__icon">
            <svg>
              <use xlink:href="#alert" />
            </svg>
          </div>
          <div class="alert__header">
            <h2>
              {{ post.title | safe }}
            </h2>
            <time datetime="{{ post.date }}" pubdate="pubdate">
              {{ post.date | postDateVerboseISO }}
            </time>
          </div>
          <div class="alert__blurb">
            <p>
              {{ post.lede | markdownify | safe }}
            </p>
          </div>
        </article>
        <footer class="alert__footer">
          <a href="/news/{{ post.date | htmlDateStringISO }}-{{ post.title | slugify }}/">
            Details
          </a>
        </footer>
      </li>
    {% endfor %}
  </ul>
{% endblock %}

{% block content %}

  <section class="page-section">
    <ul class="home-news-grid">
      <li class="news-grid__item news-grid__item--heading">
        <h2>
          Latest News
        </h2>
        <a href="/news/">
          Archive
          <svg>
            <use xlink:href="#right_arrow" />
          </svg>
        </a>
      </li>
      {% for post in posts | exclude('Advisory', 'post_type') | reverse | limit(5) %}
        <li class="news-grid__item">
          <a href="/news/{{ post.date | htmlDateStringISO }}-{{ post.title | slugify }}/">
            <div class="news__type">
              {{ post.post_type }}
            </div>
            <h3 class="news__headline">
              {{ post.title | safe }}
            </h3>
            <time datetime="{{ post.date | htmlDateStringISO }}" pubdate="pubdate" class="news__date">
              {{ post.date | postDateVerboseISO }}
            </time>
            <div class="news__lede">
              {{ post.lede | markdownify | safe }}
            </div>
            <span class="news__readmore">
              Read more
            </span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </section>

{% endblock %}
