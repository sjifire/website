---
title: San Juan Island Fire and Rescue
permalink: /
---

{% extends 'base.njk' %}

{% block page_header %}
  <h1>
    {{ title }}
  </h1>
  <div class="lede">
    {{ homepage.preamble | markdownify | safe }}
  </div>
{% endblock %}

{% block content %}

  <section class="l-grid l-grid--2col flipped">
    <div class="l-grid__main">
      <ul class="news-grid">
        {% for post in posts | reverse | limit(6) %}
          <li class="news-grid__item card">
            <div class="card__body">
              <div class="news__type">
                {% include "post_type_icons.njk" %}
                {{ post.post_type }}
              </div>
              <h3 class="news__headline">
                {{ post.title | safe }}
              </h3>
              <time datetime="{{ post.date | htmlDateStringISO }}" pubdate="pubdate" class="news__date">
                {{ post.date | postDateTerseISO }}
              </time>
              <div class="news__lede">
                {{ post.lede | markdownify | safe }}
              </div>
            </div>
            <div class="card__footer">
              <a href="/news/{{ post.date | htmlDateStringISO }}-{{ post.title | slugify }}/">Read more</a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
    <aside class="l-grid__sidebar">
      <table class="widget widget--burn-status">
        <caption class="widget__header">
          <div class="flex">
            <svg><use xlink:href='#flame' /></svg>
            <div>
              <h4>
                Burn Statuses
              </h4>
              <time class="" pubdate="">
                Updated: Nov 23, 2021
              </time>
            </div>
          </div>
        </caption>
        <tbody class="widget__body">
          <tr class="odd">
            <td>
              Fire Danger
            </td>
            <td class="level level--low">
              {{ configs.fire_status }}
            </td>
          </tr>
          <tr class="even">
            <td>
              Residential Burning
            </td>
            <td class="level level--low">
              {{ configs.burn_ban_status }}
            </td>
          </tr>
          <tr class="odd">
            <td>
              Commercial Burning
            </td>
            <td class="level level--low">
              {{ configs.commercial_burn_ban_status }}
            </td>
          </tr>
          <tr class="even">
            <td>
              Recreational Campfires
            </td>
            <td class="level level--low">
              {{ configs.rec_campfire_status }}
            </td>
          </tr>
        </tbody>
      </table>
      <table class="widget widget--station-stats">
        <caption class="widget__header">
          <div class="flex">
            <svg><use xlink:href='#stats' /></svg>
            <div>
              <h4>
                Station Statistics
              </h4>
              <time class="" pubdate="">
                Updated: {{ stats.updated_at | postDateTerseISO }}
              </time>
            </div>
          </div>
        </caption>
        <tbody class="widget__body">
          {% set cls = cycler("odd", "even") %}
          {% for i in range(0,4) %}
            {% set random_num = range(14,1011) | random %}
            <tr class="{{ cls.next() }}">
              <td>
                {{ 'Calls' if i === 0 else 'Stat Header' }}
                <aside>{{ 'Last 30 Days' if i === 0 else 'Qualifying Text' }}</aside>
              </td>
              <td>
                {{ random_num }}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </aside>
  </section>

{% endblock %}
