---
title: "Governance"
permalink: "/governance/index.html"
---

{% extends 'base.njk' %}

{% block page_header %}
  <h1>
    {{ title | safe }}
  </h1>
  <div class="lede">
    {{ governance.preamble | markdownify | safe }}
  </div>
{% endblock %}

{% block content %}
  {% set baseSections = governance.sections %}
  {% include "sections_block.njk" %}

  <section class="page-section">
    <header>
      <h2 class="special-heading">
        Board Documents
      </h2>
    </header>
    <ul class="document-list">
      <li>
          {% if collections.futureMeetings.length %}
            <h3>Upcoming Meetings</h3>
            <ul class="news-grid">
              {% for meeting in collections.futureMeetings %}
                <li class="news-grid__item">
                  <time class="news__type">
                    {{ meeting.date | postDateTerseISO }}
                  </time>
                  <div class="news__headline">
                    <p>{{ meeting.title }}</p>
                  </div>
                  <ul class="news__list">
                    {% for doc in meeting.documents %}
                      <li>
                        <a href="/assets/docs/{{ doc.file }}">
                          {{ doc.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% endfor %}
            </ul>
          {% else %}
            <p>Next regular scheduled board meeting is on <span id='next-board-meeting'>{% nextBoardMeetingDate %}</span>.</p>
          {% endif %}
      </li>
      {% for year, set in collections.pastMeetings | groupby('year') | dictsort | reverse %}
        <li>
          <h3>Past Meetings: {{ year }}</h3>
          <ul class="news-grid">
            {% for meeting in set %}
              <li class="news-grid__item">
                <time class="news__type">
                  {{ meeting.date | postDateTerseISO }}
                </time>
                <div class="news__headline">
                  <p>{{ meeting.title }}</p>
                </div>
                <ul class="news__list">
                  {% for doc in meeting.documents %}
                    <li>
                      <a href="/assets/docs/{{ doc.file }}">
                        {{ doc.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </li>
            {% endfor %}
          </ul>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endblock %}
