---
title: "Contact Us"
permalink: "/contact/index.html"
---

{% extends 'base.njk' %}

{% block content %}
  <div class="l-2col">
    <div class="l-2col__main block-content">
      <h1>
        {{ title | safe }}
      </h1>
      {{ contact.copy | markdownify | safe }}
      <form name="contact" method="POST" netlify-honeypot="bot-field" data-netlify="true" action="/thank-you/">
        <p class="sr-only">
          <label>Don’t fill this out if you’re human: <input name="bot-field" /></label>
        </p>
        <div>
          <label for="name">
            Name
          </label>
          <input id="name" type="text" name="name" class="form-control" required>
          <label for="email" style="margin-top:1.5rem;">
            Email Address
          </label>
          <input id="email" type="email" name="email-address" class="form-control" required>
          <label for="message" required style="margin-top:1.5rem;">
            Message
          </label>
          <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
          <input type="hidden" id="subject" name="subject" value="Website Contact Form Submission">
        </div>
        <div style="margin-top:1.5rem;">
          <button type="submit" class="btn btn-primary">
            Send
          </button>
        </div>
      </form>
    </div>
    <aside class="l-2col__sidebar block-content">
      <h4>Address</h4>
      <address>
        San Juan County Fire District 3<br>
        1011 Mullis Street<br>
        Friday Harbor, WA 98250
      </address>
      <h4>Office Hours</h4>
      <p>8 a.m. to 4 p.m., Monday through Friday</p>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe title="HQ location" src="{{ site.address.map }}" loading="lazy"></iframe>
      </div>
    </aside>
  </div>
{% endblock %}
