---
title: "About"
layout: base.njk
permalink: "/about/index.html"
---

<h1>
  {{ title }}
</h1>

{% for section in about.sections %}
  {% if section.type === 'text' %}
    {{ section.copy | markdownify | safe }}
  {% elif section.type === 'image' %}
    <figure>
      <img src="{{ 'https://res.cloudinary.com/san-juan-fire-district-3/image/fetch/f_auto,q_auto:good,c_limit,w_1200,h_800/' + site.rootUrl if site.env === 'production' }}{{ '/assets/images/' }}{{ section.source }}" alt="{{ section.alt }}" width="{{ section.width }}" height="{{ section.height }}" loading="lazy">
      {% if section.caption %}
        <figcaption>
          {{ section.caption }}
        </figcaption>
      {% endif %}
    </figure>
  {% elif section.type === 'youtube' %}
    {% set video_id = section.source.split('/').pop() %}
    <figure>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe src="https://www.youtube.com/embed/{{ video_id }}" loading="lazy"></iframe>
      </div>
      {% if section.caption %}
        <figcaption>
          {{ section.caption }}
        </figcaption>
      {% endif %}
    </figure>
  {% endif %}
{% endfor %}

<hr>

<h1>
  Blog Posts
</h1>

<ol>
  {% for post in collections.posts | reverse %}
    <li style="margin-bottom:1.5rem;">
      <a href="/blog/{{ post.data.date | htmlDateString }}-{{ post.data.title | slugify }}/">
          {{ post.data.title }}
      </a>
      &nbsp;â€¢&nbsp;
      <time datetime="{{ post.data.date }}" pubdate="pubdate">
        {{ post.data.date | postDateTerse }}
      </time>
      <p style="margin:0.35rem 0 0;">
        {{ post.data.lede }}
      </p>
    </li>
  {% endfor %}
</ol>
