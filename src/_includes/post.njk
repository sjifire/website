---
layout: base.njk
---

<section>
  <article>
    <header>
      <h1>
        {{ title }}
      </h1>
      <time datetime="{{ date | htmlDateString }}" pubdate="pubdate">
        {{ date | postDateVerbose }}
      </time>
    </header>
    <p>
      {{ lede }}
    </p>
    <div>
      {{ content | safe }}
    </div>
  </article>
</section>

{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<hr>
<ul>
  {%- if nextPost %}<li>Newer: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
  {%- if previousPost %}<li>Older: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
