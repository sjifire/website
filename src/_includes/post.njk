---
layout: base.njk
---

<article>
  <header style="margin-bottom:2rem;">
    <h1 style="font-size: 32px;margin-bottom:0.5rem;">
      {{ title }}
    </h1>
    <time datetime="{{ date | htmlDateString }}" pubdate="pubdate" style="margin-bottom:0;font-size:12px;text-transform:uppercase;letter-spacing:0.15rem;color:#777;">
      {{ date | postDateVerbose }}
    </time>
    <p style="margin:0.5rem 0 0;font-size:21px;line-height:1.2">
      {{ lede }}
    </p>
  </header>
  {{ content | safe }}
</article>

{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<ul style="margin-top:2rem;padding-top:2rem;border-top:1px solid #ccc;">
  {%- if nextPost %}<li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a></li>{% endif %}
  {%- if previousPost %}<li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
