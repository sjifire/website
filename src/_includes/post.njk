---
layout: base.njk
---

<article class="post">
    <h1>{{ title }}</h1>
    <time datetime="{{ date }}">{{ date | dateDisplay }}</time>

    {% if featuredImage %}
    <img src="{{ featuredImage }}" alt="{{ title }}" class="featured-image">
    {% endif %}

    <div class="post-content">
        {{ content | safe }}
    </div>
</article>
