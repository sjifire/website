{%- case post.post_type -%}
  {%- when 'News' -%}
    <svg><use xlink:href='#news' /></svg>
  {%- when 'Advisory' -%}
    <svg><use xlink:href='#alert' /></svg>
  {%- when 'Announcement' -%}
    <svg><use xlink:href='#warning' /></svg>
  {%- when 'On Scene' -%}
    <svg><use xlink:href='#rescue' /></svg>
  {%- when 'Member Profile' -%}
    <svg><use xlink:href='#profile' /></svg>
  {%- when 'Fact Check' -%}
    <svg><use xlink:href='#fact-check' /></svg>
  {%- when 'Department Highlight' -%}
    <svg><use xlink:href='#highlight' /></svg>
{%- endcase -%}
